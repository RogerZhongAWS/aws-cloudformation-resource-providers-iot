{
  "typeName": "AWS::IoT::SoftwarePackage",
  "description": "resource definition",
  "definitions": {
    "TagMap": {
      "type": "object",
      "maxProperties": 50,
      "minProperties": 0,
      "patternProperties": {
        "^([\\p{L}\\p{Z}\\p{N}_.:/=+\\-@]*)$": {
          "type": "string",
          "maxLength": 256,
          "minLength": 0
        }
      },
      "additionalProperties": false
    }
  },
  "properties": {
    "DefaultVersionName": {
      "type": "string",
      "maxLength": 64,
      "minLength": 1,
      "pattern": "^[a-zA-Z0-9-_.]+$"
    },
    "Description": {
      "type": "string",
      "maxLength": 1024,
      "minLength": 0,
      "pattern": "^[^\\p{C}]+$"
    },
    "PackageArn": {
      "type": "string"
    },
    "PackageName": {
      "type": "string",
      "maxLength": 128,
      "minLength": 1,
      "pattern": "^[a-zA-Z0-9-_.]+$"
    },
    "Tags": {
      "$ref": "#/definitions/TagMap"
    },
    "UnsetDefaultVersion": {
      "type": "boolean"
    }
  },
  "tagging": {
    "taggable": true,
    "tagOnCreate": true,
    "tagUpdatable": true,
    "cloudFormationSystemTags": true,
    "tagProperty": "/properties/Tags"
  },
  "readOnlyProperties": [
    "/properties/PackageArn"
  ],
  "writeOnlyProperties": [
    "/properties/Tags",
    "/properties/UnsetDefaultVersion"
  ],
  "createOnlyProperties": [
    "/properties/PackageName"
  ],
  "primaryIdentifier": [
    "/properties/PackageName"
  ],
  "handlers": {
    "create": {
      "permissions": [
        "iot:CreatePackage",
        "iot:CreatePackageVersion",
        "iot:UpdatePackage",
        "iot:UpdatePackageVersion",
        "iot:GetPackage",
        "iot:TagResource",
        "iot:GetIndexingConfiguration",
        "iot:UpdateIndexingConfiguration"
      ]
    },
    "read": {
      "permissions": [
        "iot:GetPackage",
        "iot:ListTagsForResource"
      ]
    },
    "update": {
      "permissions": [
        "iot:CreatePackage",
        "iot:UpdatePackage",
        "iot:GetPackage",
        "iot:ListTagsForResource",
        "iot:TagResource",
        "iot:UntagResource",
        "iot:GetIndexingConfiguration",
        "iot:UpdateIndexingConfiguration"
      ]
    },
    "delete": {
      "permissions": [
        "iot:DeletePackage",
        "iot:DeletePackageVersion",
        "iot:GetPackage",
        "iot:GetPackageVersion",
        "iot:UpdatePackage",
        "iot:UpdatePackageVersion",
        "iot:GetIndexingConfiguration",
        "iot:UpdateIndexingConfiguration"
      ]
    },
    "list": {
      "permissions": [
        "iot:ListPackages"
      ]
    }
  },
  "additionalProperties": false
}
